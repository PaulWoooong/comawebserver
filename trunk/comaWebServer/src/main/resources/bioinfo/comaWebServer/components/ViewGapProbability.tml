			<td class="left">
				 <a onclick="openHelpWindow('/static_pages/help.html#gap_evalue_threshold');" href="#">
	                ${message:uc_E}
	             </a>
			</td>
			<td class="right">
				<t:textfield t:id="uc_E" t:value="gapProbability.uc_E" t:validate="required"/>
